{
    "swagger": "2.0",
    "info": {
        "description": "This is a sample server Petstore server.",
        "title": "Swagger Example API",
        "contact": {},
        "license": {},
        "version": "1.0"
    },
    "host": "{{.Host}}",
    "basePath": "{{.BasePath}}",
    "paths": {
        "/bth/balance/": {
            "post": {
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "获取余额(比特币)",
                "parameters": [
                    {
                        "type": "string",
                        "description": "比特币帐户地址",
                        "name": "address",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "failed",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "failed",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}